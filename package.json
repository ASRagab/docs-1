{
  "scripts": {
    "test": "ajv validate -s test/schema.json -d doc.config.json",
    "format:check": "prettier --check docs",
    "format:fix": "prettier --write docs"
  },
  "devDependencies": {
    "ajv-cli": "^5.0.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.0.1",
    "prettier": "^2.3.2"
  },
  "lint-staged": {
    "docs/**/*.{md,mdx}": "yarn format:fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
